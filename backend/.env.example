# Server Configuration
PORT=5000
NODE_ENV=development

# Firebase Admin Configuration (Backend)
# Pastikan file serviceAccountKey.json ada di root backend untuk akses admin penuh
FIREBASE_PROJECT_ID=arphatra-xxx
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@arphatra-xxx.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n..."

# Firebase Storage Bucket (Tanpa gs://)
FIREBASE_STORAGE_BUCKET=arphatra-xxx.appspot.com

# SMTP Configuration (Optional - for Email Notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password